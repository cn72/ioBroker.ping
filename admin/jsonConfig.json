{
  "i18n": true,
  "type": "tabs",
  "items": {
    "_main": {
      "type": "panel",
      "label": "Main settings",
      "items": {
        "interval": {
          "type": "number",
          "min": 5000,
          "label": "Interval",
          "help": "ms",
          "sm": 12,
          "md": 2
        },
        "intervalByUnreach": {
          "type": "number",
          "min": 5000,
          "label": "Interval if unreachable",
          "help": "ms",
          "sm": 12,
          "md": 2
        },
        "numberOfRetries": {
          "newLine": true,
          "type": "number",
          "min": 0,
          "label": "Number of retries",
          "sm": 12,
          "md": 2
        },
        "noHostname": {
          "newLine": true,
          "type": "checkbox",
          "label": "No host name in state name",
          "sm": 12,
          "md": 4
        }
      }
    },
    "_devices": {
      "type": "panel",
      "label": "Devices",
      "items": {
        "devices": {
          "type": "table",
          "showSecondAddAt": true,
          "items": [
            {
              "type": "checkbox",
              "attr": "enabled",
              "title": "Enabled",
              "width": 70
            },
            {
              "type": "text",
              "attr": "name",
              "title": "Name"
            },
            {
              "type": "checkbox",
              "attr": "use_name",
              "title": "Use name",
              "width": 70
            },
            {
              "type": "text",
              "attr": "ip",
              "title": "IP Address"
            },
            {
              "type": "checkbox",
              "attr": "extended_info",
              "title": "Extended Info",
              "width": 70
            }
          ]
        }
      }
    }
  }
}